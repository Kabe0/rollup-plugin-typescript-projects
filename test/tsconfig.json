{
  "include": [
    "./**/*",
    "../src/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@plugin/*": ["src/*"],
      "@test/*": ["./test/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}