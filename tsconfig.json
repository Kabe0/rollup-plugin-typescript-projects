{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./types",
    "sourceMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "strict": true,
    "target": "es2020",
    "outDir": "./temp",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@plugin/*": ["src/*"],
      "@test/*": ["./test/*"]
    }
  },
  "exclude": ["dist", "node_modules"],
}
